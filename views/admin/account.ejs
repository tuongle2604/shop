<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<% include head.ejs %>

<body>
    <div id="wrapper">
      <% include navbar.ejs %>

        <!-- /. NAV SIDE  -->
        <div id="page-wrapper" >
            <div id="page-inner">
			 <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header">
                            Tables Page <small>Responsive tables</small>
                        </h1>
                    </div>
                </div>
                 <!-- /. ROW  -->

            <div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                          <form action="/admin/account/role" method="post">
                          <select name='role' required>
                          <option value="all">ALL</option>
                          <option value="customer">customer</option>
                          <option value="partner">partner</option>
                          <option value="admin">admin</option>
                          </select>
                          <button type="submit">search</button>
                          </form>


                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th style="padding-left:20px;">ID</th>
                                            <th style="padding-left:20px;">email</th>
                                            <th style="padding-left:20px;">role</th>
                                            <th style="padding-left:20px;"><a href="/admin/account/add" style="color:red"><i class="fa fa-plus" aria-hidden="true"></i>  ADD </th></a>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% for(var i=0;i<data.length;i++){
                                        %>
                                        <tr class="odd gradeX">
                                            <td class="center" style="padding:40px 0px 20px 20px;" ><%=data[i].id%></td>
                                            <%  if(data[i].email){
                                              %>
                                              <td class="center" style="padding:40px 0px 20px 20px;"><%=data[i].email%></td>
                                              <%
                                            }else if(data[i].facebook){
                                              var arr = data[i].facebook.split(";");
                                              %>
                                              <td class="center" style="padding:40px 0px 20px 20px;"><%=arr[0]%> <span style="margin-right:-100px;padding-left:40px;color:blue;">(facebook)</span></td>
                                              <%
                                            }else{
                                              var arr = data[i].google.split(";");
                                              %>
                                              <td class="center" style="padding:40px 0px 20px 20px;"><%=arr[1]%> <span style="margin-right:-100px;padding-left:40px;color:red;">(google)</span></td>
                                              <%
                                            }
                                            %>
                                            <td class="center" style="padding:40px 0px 20px 20px;"><%=data[i].role%></td>
                                            <td class="center" style="padding:20px;">
                                              <div style="padding:10px;">
                                                <a href="/admin/account/delete/<%=data[i].id%>" stlye="margin:10px;"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>
                                              </div>
                                              <div style="padding:10px;" >
                                                <a href="/admin/account/edit/<%=data[i].id%>" stlye="margin:10px;"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>
                                              </div>
                                          </td>
                                        </tr>
                                        <%
                                      }
                                      %>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>
            </div>

        </div>

    </div>
             <!-- /. PAGE INNER  -->
            </div>

</body>
</html>
