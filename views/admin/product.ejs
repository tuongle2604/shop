<body>
    <div id="wrapper">
      <% include navbar.ejs %>

        <!-- /. NAV SIDE  -->
        <div id="page-wrapper" >
            <div id="page-inner">
			 <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-header">
                            Tables Page <small>Responsive tables</small>
                        </h1>
                    </div>
                </div>
                 <!-- /. ROW  -->

            <div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                          <form action="/admin/product/category" method="post">
                          <select name='category'>
                          <option value="">ALL</option>
                          <option value="iphone">IPHONE</option>
                          <option value="samsung">SAMSUNG</option>
                          <option value="oppo">OPPO</option>
                          <option value="sony">SONY</option>
                          <option value="vivo">VIVO</option>
                          <option value="huawei">HUAWEI</option>
                          </select>
                          <button type="submit">search</button>
                          </form>


                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th style="padding-left:20px;">ID</th>
                                            <th style="padding-left:20px;">IMAGE</th>
                                            <th style="padding-left:20px;">NAME</th>
                                            <th >PRICE</th>
                                            <th style="padding-left:20px;"><a href="/admin/product/add" style="color:red"><i class="fa fa-plus" aria-hidden="true"></i>  ADD </th></a>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% for(var i=0;i<data.length;i++){
                                        %>
                                        <tr class="odd gradeX">
                                            <td class="center" style="padding:40px 0px 20px 20px;" ><%=data[i].id%></td>
                                            <td>
                                                <img style="width:70px;" src="<%=data[i].img%>" alt="">
                                            <td class="center" style="padding:40px 0px 20px 20px;"><%=data[i].name%></td>
                                            <td class="center" style="padding:40px 0px 20px 20px;"><%=data[i].price%></td>
                                            <td class="center" style="padding:20px;">
                                              <div style="padding:10px;">
                                                <a href="/admin/product/delete/<%=data[i].id%>" stlye="margin:10px;"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>
                                              </div>
                                              <div style="padding:10px;" >
                                                <a href="/admin/product/edit/<%=data[i].id%>" stlye="margin:10px;"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>
                                              </div>
                                          </td>
                                        </tr>
                                        <%
                                      }
                                      %>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>
            </div>

        </div>

    </div>
